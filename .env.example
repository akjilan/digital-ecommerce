# ─────────────────────────────────────────────
# Copy this file to .env and fill in real values
# NEVER commit .env to version control
# ─────────────────────────────────────────────

# ── WEB (apps/web/.env.local) ─────────────────
NEXT_PUBLIC_API_URL=http://localhost:4000

# ── API (apps/api/.env) ───────────────────────
PORT=4000
CORS_ORIGIN=http://localhost:3000

# ── Database (PostgreSQL) ─────────────────────
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=ecommerce_db
DATABASE_USER=postgres
DATABASE_PASSWORD=changeme
DATABASE_URL=postgresql://postgres:changeme@localhost:5432/ecommerce_db

# ── Redis ────────────────────────────────────
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ── JWT ──────────────────────────────────────
JWT_SECRET=supersecretjwtkey_changeme
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=supersecretrefreshkey_changeme
REFRESH_TOKEN_EXPIRES_IN=30d

# ── Stripe ───────────────────────────────────
STRIPE_SECRET_KEY=sk_test_changeme
STRIPE_WEBHOOK_SECRET=whsec_changeme
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_changeme

# ── Email (SMTP) ──────────────────────────────
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=587
MAIL_USER=changeme
MAIL_PASS=changeme
MAIL_FROM=noreply@example.com

# ── Storage (S3-compatible) ───────────────────
S3_ENDPOINT=https://s3.amazonaws.com
S3_REGION=us-east-1
S3_BUCKET=ecommerce-assets
S3_ACCESS_KEY=changeme
S3_SECRET_KEY=changeme
